@model OverTime.Models.RegisterViewModel
@{
    ViewBag.Title = "Create";
}
<div class="col-md-12 col-xs-12 col-lg-12 col-md-12">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="glyphicon glyphicon-home"></i></a></li>
        <li>
            <a href="@Url.Action("Index")">Users</a>
        </li>
        <li class="active">
            Add New
        </li>
    </ol>
</div>
<div class="col-lg-12">
    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div class="input-group max-width-280">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter email?" })
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-envelope"></i>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div class="input-group max-width-280">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password?" })
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div class="input-group max-width-280">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Enter confirm password?" })
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label">
                Select User Group
            </label>
            <div class="col-md-10">
                @foreach (var item in (SelectList)ViewBag.GroupsList)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="selectedGroups" value="@item.Value" />
                            @item.Text
                        </label>
                    </div>
                }
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label">
                Select User Department
            </label>
            <div class="col-md-10">
                <div class="row">
                    @foreach (var item in (SelectList)ViewBag.DepartmentsList)
                    {
                        <div class="col-xs-2">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="selectedDepartments" value="@item.Value" />
                                    @item.Text
                                </label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" class="btn btn-default" value="Create" />*@
                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="glyphicon glyphicon-saved">&nbsp;</i>
                    <span>Save</span>
                </button>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Html.Partial("_ValidationPartial")
<script type="text/javascript">
    $(document)
        .ready(function() {
            $('#Email').focus();
        });
</script>
}
