<!-- Modal -->
<div id="modalApproved" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Approved ID</h4>
            </div>
            <div class="modal-body">
                <p>You are about to delete ID '<b>@*@Model.nUserID*@</b>' permanently. Are you sure you want to delete this record?</p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Approved", "Home", FormMethod.Post, new {@role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-success btn-sm ">
                        <i class="glyphicon glyphicon-check"></i>
                        Approved
                    </button>
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                        <i class="glyphicon glyphicon-remove"></i>
                        Close
                    </button>
                }
            </div>
        </div>

    </div>
</div>
