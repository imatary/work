@model IEnumerable<OverTime.Models.ApplicationRole>

@{
    ViewBag.Title = "Index";
}
@section styles
{
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}
<div class="col-md-12 col-xs-12 col-lg-12 col-md-12">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="glyphicon glyphicon-home"></i></a></li>
        <li class="active">
            Roles
        </li>
    </ol>
</div>
<div class="col-md-12 col-xs-12 col-lg-12 col-md-12">
    <div class="pull-right ">
        @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Create")" class="btn btn-sm btn-primary exportCsv">
                <i class="glyphicon glyphicon-plus"></i>Create New
            </a>
        }
    </div>
</div>
<div class="col-md-12 col-lg-12 col-xs-12 margintop20">
    <table id="rolesTable" class="table table-striped table-responsive table-hover dataTable no-footer">
        <thead>
            <tr>
                <th class="no-sort">#</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th class="no-sort">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                int count = 0;
                foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td class="center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
@section scripts
{
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#rolesTable')
                .dataTable({
                    responsive: true,
                    "order": [],
                    "columnDefs": [
                        {
                            "targets": 'no-sort',
                            "orderable": false
                        }
                    ]
                });
        });
    </script>
}



