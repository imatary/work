@model OQC.Web.Models.mst_operator
@{
    ViewBag.Title = $"{Model.OperatorName}";
}
<div class="col-md-12 col-xs-12 col-lg-12 col-md-12">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="glyphicon glyphicon-home"></i></a></li>
        <li>
            <a href="@Url.Action("Index")">Operators</a>
        </li>
        <li class="active">
            @Model.OperatorName
        </li>
    </ol>
</div>
<div class="col-lg-12">
    <h2>@ViewBag.Title.</h2>
    @using (Html.BeginForm("Edit", "Operator", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.OperatorID, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    @Html.TextBoxFor(m => m.OperatorID, new { @class = "form-control", @placeholder = "ex: 16354", @autocomplete = "off", autofocus = "true", @readonly = "readonly" })
                </div>
                @Html.ValidationMessageFor(m => m.OperatorID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.OperatorName, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    @Html.TextBoxFor(m => m.OperatorName, new { @class = "form-control", @placeholder = "ex: Phạm Văn Cương" })
                </div>
                @Html.ValidationMessageFor(m => m.OperatorName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="glyphicon glyphicon-saved">&nbsp;</i>
                    <span>Save</span>
                </button>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Html.Partial("_ValidationPartial")
    <script type="text/javascript">
        $(document)
            .ready(function () {
                $('#OperatorName').focus();
            });
    </script>
}