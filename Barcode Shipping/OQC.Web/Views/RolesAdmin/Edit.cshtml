@model OQC.Web.Models.RoleViewModel
@{
    ViewBag.Title = "Edit";
}
<div class="col-md-12 col-xs-12 col-lg-12 col-md-12">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Confirm")"><i class="glyphicon glyphicon-home"></i></a></li>
        <li>
            <a href="@Url.Action("Index")">Roles</a>
        </li>
        <li class="active">
            Exit @Html.DisplayFor(model => model.Name)
        </li>
    </ol>
</div>
<div class="col-lg-12">
    <h2>Edit.</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Roles.</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="input-group max-width-280">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Group name?" })
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-tags"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-saved">&nbsp;</i>
                        Save
                    </button>
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
