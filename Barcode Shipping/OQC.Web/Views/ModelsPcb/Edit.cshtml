@model OQC.Web.Models.ModelPCB
@{
    ViewBag.Title = $"{Model.ModelName}";
}
<div class="col-md-12 col-xs-12 col-lg-12 col-md-12">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="glyphicon glyphicon-home"></i></a></li>
        <li>
            <a href="@Url.Action("Index")">Operators</a>
        </li>
        <li class="active">
            @Model.ModelName
        </li>
    </ol>
</div>
<div class="col-lg-12">
    <h2>@ViewBag.Title.</h2>
    @using (Html.BeginForm("Edit", "ModelsPcb", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.ModelID)
        <div class="form-group margintop20">
            @Html.LabelFor(m => m.ModelName, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    @Html.TextBoxFor(m => m.ModelName, new { @class = "form-control", @placeholder = "ex: 105K 32380", @autocomplete = "off", autofocus = "true" })
                </div>
                @Html.ValidationMessageFor(m => m.ModelName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Quantity, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", @placeholder = "ex: 6" })
                </div>
                @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SerialNo, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    @Html.TextBoxFor(m => m.SerialNo, new { @class = "form-control", @placeholder = "ex: QTD0" })
                </div>
                @Html.ValidationMessageFor(m => m.SerialNo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CustomerName, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @placeholder = "ex: FujiXerox" })
                </div>
                @Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-primary btn-sm" type="submit">
                    <i class="glyphicon glyphicon-saved">&nbsp;</i>
                    <span>Save</span>
                </button>
                <button class="btn btn-info btn-sm" type="reset">
                    <i class="glyphicon glyphicon-refresh">&nbsp;</i>
                    <span>Reset</span>
                </button>
                <button class="btn btn-default btn-sm" type="reset">
                    <i class="glyphicon glyphicon-arrow-left">&nbsp;</i>
                    <span>Back to list</span>
                </button>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Html.Partial("_ValidationPartial")
    <script type="text/javascript">
        $(document)
            .ready(function () {
                $('#ModelName').focus();
            });
    </script>
}