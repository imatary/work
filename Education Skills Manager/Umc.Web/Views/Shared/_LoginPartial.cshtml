@using Umc.Web.Extensions
<li class="dropdown user user-menu">
    @if (Request.IsAuthenticated)
    {
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="~/Content/img/no-avatar.png" class="user-image" alt="@User.Identity.GetUserNameIdentifier()">
            <span class="hidden-xs">@User.Identity.GetUserNameIdentifier()</span>
        </a>
        <ul class="dropdown-menu">
            <li class="user-header">
                <img src="~/Content/img/no-avatar.png" class="img-circle" alt="@User.Identity.GetUserNameIdentifier()">
                <p>
                    <small>@User.Identity.GetUserEmail()</small>
                </p>
            </li>
            <li class="user-footer">
                @using (Html.BeginForm("LogOff", "Account", new { area="" }, FormMethod.Post, new { id = "logoutForm", @class = "" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="pull-left">
                        <a href="@Url.Action("Index", "Manage", new{ area="" })" title="@User.Identity.GetUserNameIdentifier()" class="btn btn-danger btn-flat">
                            <i class="glyphicon glyphicon-user"></i>
                            Profile
                        </a>
                    </div>
                    <div class="pull-right">
                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat"><i class="glyphicon glyphicon-log-out">&nbsp;</i> Sign out</a>
                    </div>
                }
            </li>
        </ul>
    }
    else
    {
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    }
</li>