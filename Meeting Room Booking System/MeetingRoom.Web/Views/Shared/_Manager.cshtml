<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UMC Electronics VietNam Ltd's</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <!--[if lt IE 9]>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <script src="/Scripts/html5shiv.js" type="text/javascript"></script>
        <script src="/Scripts/respond.min.js" type="text/javascript"></script>
    <![endif]-->
    
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top navbar-border-button">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index", "Home", new {area = ""})">
                <img src="~/Content/img/umc-logo.png" class="img-logo"/>
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Events", "Index", "Manager")</li>
                <li>@Html.ActionLink("Add new user", "Register", "Account")</li>
            </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="glyphicon glyphicon-user"></i>
                            <strong>@User.Identity.Name</strong>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("ChangePassword", "Manage")">
                                    <i class="glyphicon glyphicon-cog"></i>
                                    Change Password
                                </a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li>
                                <a href="javascript:document.getElementById('logoutForm').submit()">
                                    <i class="glyphicon glyphicon-log-out"></i>
                                    Log off
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr/>
        <footer>
            <hr/>
            <p class="text-center">&copy; <strong>@DateTime.Now.Year - UMC Electronics VietNam Ltd's</strong></p>
            <p class="text-center">Support:<strong>&nbsp;PE-IT</strong></p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#example').DataTable();
        });
    </script>
</body>
</html>
