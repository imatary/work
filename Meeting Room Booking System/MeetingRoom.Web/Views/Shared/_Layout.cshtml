@*@using System.Web.Script.Serialization*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UMC Electronics VietNam Ltd's</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/dhtmlxScheduler/dhtmlxscheduler-responsive.css" rel="stylesheet" />
    <script src="~/Scripts/dhtmlxScheduler/dhtmlxscheduler-responsive.js"></script>
    <!--[if lt IE 9]>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
     <script src="/Scripts/html5shiv.js" type="text/javascript"></script>
     <script src="/Scripts/respond.min.js" type="text/javascript"></script>
    <![endif]-->
    @*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top navbar-border-button">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home", new { area = "" })">
                    <img src="~/Content/img/umc-logo.png" class="img-logo" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("International Call", "InternationalCall", "Home", null, new {target="_blank"})</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <div class="col-lg-4">
                <p>&copy; <strong>@DateTime.Now.Year - UMC Electronics VietNam Ltd's</strong></p>
                <p><span class="glyphicon glyphicon-phone-alt">&nbsp;</span>Phone: <strong>(+84) 0320.3570.001</strong></p>
                <p><span class="glyphicon glyphicon-print">&nbsp;</span>Fax: <strong>(+84) 0320.3570.011</strong></p>
                <p>Support:<strong>&nbsp;PE-IT</strong></p>
            </div>
            @{ Html.RenderAction("PhoneInRooms", "Helper");}
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
