@model IEnumerable<MeetingRoom.Web.ViewModels.EventViewModel>
@{
    ViewBag.Title = "Manager";
    Layout = "~/Views/Shared/_Manager.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Events</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                List events
            </div>
            <div class="panel-body">
                <div class="dataTables_wrapper">
                    <table class="table table-striped table-hover table-bordered" id="#dataTablesEvents">
                        <thead>
                            <tr>
                                <td>#</td>
                                <td>Title</td>
                                <td>Start Time</td>
                                <td>End Time</td>
                                <td>Room</td>
                                <td>Using device</td>
                                <td>User created</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 0;
                                foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.title</td>
                                        <td>@item.start_date</td>
                                        <td>@item.end_date</td>
                                        <td>@item.room_name</td>
                                        <td>
                                            <ul class="list-unstyled">
                                                <li>
                                                    Laptop: <strong>@item.laptop_name</strong>
                                                </li>
                                                <li>
                                                    Projector:<strong> @item.projector_name</strong>
                                                </li>
                                                <li>
                                                    Phone: <strong>@item.phone_name</strong>
                                                </li>
                                                <li>
                                                    Other device: <strong>@item.other_devices</strong>
                                                </li>
                                            </ul>
                                        </td>
                                        <td>@item.user_name</td>
                                        <td>&nbsp;</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


